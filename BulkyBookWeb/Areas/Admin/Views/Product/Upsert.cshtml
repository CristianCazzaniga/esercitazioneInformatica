@model Product
@{
    ViewData["Title"] = "Upsert";
}
<form method="post" asp-action="Upsert">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="row mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-cotrol" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Description"></label>
<textarea asp-for="Description" rows="3" class="form-cotrol"></textarea>

            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-cotrol" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-cotrol" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-cotrol" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-cotrol" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" class="form-cotrol" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" class="form-cotrol" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="row mb-3">

            <label asp-for="CategoryId"></label>

            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryList">

                <option disabled selected>--Select Category--</option>

            </select>

            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="CoverTypeId"></label>
            <select asp-for="CoverTypeId" class="form-select" asp-items="@(ViewData["CoverTypeList"] as IEnumerable<SelectListItem>)">
                <option disabled selected>--Select CoverType--</option>
            </select>
            <span asp-validation-for="CoverTypeId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}